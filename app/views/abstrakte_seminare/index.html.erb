<div class="container mt-5">
  <div class="students-header text-center mb-5">
    <h1 class="display-4"><i class="bi bi-journal-richtext"></i> Abstrakte Seminare</h1>
    <p class="lead text-muted">Ãœbergeordnete Seminarangebote und Themenbereiche.</p>
  </div>

  <% if @abstrakte_seminare.any? %>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
      <% @abstrakte_seminare.each do |as| %>
        <div class="col">
          <div class="card h-100 modern-student-card-grid">
            <div class="card-header">
              <h5 class="card-title fw-bold text-primary"><%= as.thema %></h5>
            </div>
            <div class="card-body">
              <p class="card-text"><%= as.beschreibung %></p>
            </div>
            <div class="card-footer bg-light text-muted">
              Verantwortlich: <%= as.mitarbeiter.titel %> <%= as.mitarbeiter.nachname %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="alert alert-info modern-alert text-center">
      <i class="bi bi-info-circle-fill me-2"></i>
      Es sind aktuell keine abstrakten Seminare vorhanden.
    </div>
  <% end %>
</div>

