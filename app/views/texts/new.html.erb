<h1>Analyze Text</h1>

<%= form_with url: analyze_texts_path, method: :post, id: "analyze-form" do %>
  <%= label_tag :text, "Enter text to analyze:" %><br>
  <%= text_area_tag :text, nil, rows: 5, cols: 50, required: true %><br><br>
  <%= submit_tag "Analyze Text" %>
<% end %>

<% if flash[:alert] %>
  <div style="color: red;">
    <%= flash[:alert] %>
  </div>
<% end %>

<div id="results">
 
</div>
