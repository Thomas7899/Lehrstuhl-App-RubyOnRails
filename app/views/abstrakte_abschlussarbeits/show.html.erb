<p style="color: green">
  <%= notice %>
</p>

<div class="row">
  <div class="col-md-6">
    <div class="card mb-4">
      <div class="card-body">
        <%= render @abstrakte_abschlussarbeit %>
      </div>
    </div>
  </div>
</div>

<div class="col-md-6">
  <h3>Zugehörige konkrete Abschlussarbeiten</h3>
  <% if @konkrete_abschlussarbeits.any? %>

    <div class="card" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title">Card title</h5>
        <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's
          content.</p>
        <a href="#" class="card-link">Card link</a>
        <a href="#" class="card-link">Another link</a>
      </div>
    </div>

    <div id="konkrete_abschlussarbeits" class="container mt-4">
      <div class="row">
        <% @konkrete_abschlussarbeits.each do |konkrete_abschlussarbeit| %>
          <div class="col-md-6 col-lg-8 mb-4">
            <div class="card">
              <div class="card-body">
                <%= render konkrete_abschlussarbeit %>
                  <p class="mt-3"></p>
                  <%= link_to "Zur Abschlussarbeit" , konkrete_abschlussarbeit_path(konkrete_abschlussarbeit),
                    class: "btn btn-primary" %>
                    </p>
              </div>
            </div>
          </div>
          <% end %>
      </div>
      <% else %>
        <p>Es gibt keine konkreten Abschlussarbeiten für diese abstrakte Abschlussarbeit.</p>
        <% end %>
    </div>

    <div class="col-md-6">
      <div class="d-flex flex-column flex-md-row align-items-start gap-2 mt-3">
        <%= link_to "Bearbeiten" , edit_abstrakte_abschlussarbeit_path(@abstrakte_abschlussarbeit),
          class: "btn btn-warning" %>
          <%= link_to "Zurück" , abstrakte_abschlussarbeits_path, class: "btn btn-secondary" %>
            <%= button_to "Löschen" , @abstrakte_abschlussarbeit, method: :delete, class: "btn btn-danger" %>
      </div>
    </div>