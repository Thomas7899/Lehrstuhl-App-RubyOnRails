<div class="container mt-5">
  <div class="students-header text-center mb-5">
    <h1 class="display-4"><i class="bi bi-calendar3-event"></i> Klausuren</h1>
    <p class="lead text-muted">Ãœbersicht der angebotenen Klausuren.</p>
  </div>

  <% if @klausuren.any? %>
    <div class="table-responsive">
      <table class="table modern-table align-middle">
        <thead>
          <tr>
            <th>Titel</th>
            <th>Modul</th>
            <th>Semester</th>
          </tr>
        </thead>
        <tbody>
          <% @klausuren.each do |klausur| %>
            <tr>
              <td><%= klausur.titel %></td>
              <td><%= klausur.modul %></td>
              <td><%= klausur.semester %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="alert alert-info modern-alert text-center">
      <i class="bi bi-info-circle-fill me-2"></i>
      Es sind aktuell keine Klausuren geplant.
    </div>
  <% end %>
</div>