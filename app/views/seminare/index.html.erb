<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2">Seminare</h1>
    <%= link_to "Neues Seminar", new_seminare_path, class: "btn btn-primary" %>
  </div>

  <div id="seminare" class="table-responsive">
    <table class="table table-striped table-hover">
      <thead class="thead-light">
        <tr>
          <th>Titel</th>
          <th>Semester</th>
          <th>Dozent</th>
          <th>Ort</th>
          <th>Datum</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @seminare.each do |seminar| %>
          <tr>
            <td><%= seminar.titel %></td>
            <td><%= seminar.semester %></td>
            <td><%= seminar.mitarbeiter.titel %> <%= seminar.mitarbeiter.vorname %> <%= seminar.mitarbeiter.nachname %></td>
            <td><%= seminar.ort %></td>
            <td><%= l(seminar.praesenzdatum, format: :short) if seminar.praesenzdatum %></td>
            <td><%= link_to 'Details', seminare_path(seminar), class: 'btn btn-sm btn-info' %></td>
            <td><%= link_to 'Bearbeiten', edit_seminare_path(seminar), class: 'btn btn-sm btn-warning' %></td>
            <td><%= link_to 'LÃ¶schen', seminare_path(seminar), data: { turbo_method: :delete, turbo_confirm: 'Sind Sie sicher?' }, class: 'btn btn-sm btn-danger' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>