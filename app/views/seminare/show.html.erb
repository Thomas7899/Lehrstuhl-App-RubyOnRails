<div class="container-fluid">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-gray-800">Seminardetails</h1>
    <div>
      <%= link_to 'Zurück zur Übersicht', seminare_path, class: 'btn btn-secondary' %>
      <%= link_to 'Bearbeiten', edit_seminar_path(@seminar), class: 'btn btn-primary' %>
    </div>
  </div>

  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary"><%= @seminar.titel %></h6>
    </div>
    <div class="card-body">
      <p><strong>Titel:</strong> <%= @seminar.titel %></p>
      <p><strong>Semester:</strong> <%= @seminar.semester %></p>
      <p><strong>Abstraktes Seminarthema:</strong> <%= @seminar.abstraktes_seminar.thema %></p>
      <p><strong>Betreuender Mitarbeiter:</strong> <%= @seminar.mitarbeiter.full_name %></p>
      <p><strong>Aufnahmekapazität:</strong> <%= @seminar.aufnahmekapazitaet %></p>
      <p><strong>Präsenzdatum:</strong> <%= l @seminar.praesenzdatum if @seminar.praesenzdatum %></p>
      <p><strong>Ort:</strong> <%= @seminar.ort %></p>
    </div>
  </div>

  <!-- Teilnehmende Studenten -->
  <div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
      <h6 class="m-0 font-weight-bold text-primary">Teilnehmer (<%= @seminar.seminarergebnisse.count %> / <%= @seminar.aufnahmekapazitaet %>)</h6>
      <%# TODO: Link zum Hinzufügen eines Studenten hinzufügen %>
    </div>
    <div class="card-body">
      <% if @seminar.seminarergebnisse.any? %>
        <div class="table-responsive">
          <table class="table table-bordered" width="100%" cellspacing="0">
            <thead>
              <tr>
                <th>Name</th>
                <th>Matrikelnummer</th>
                <th>Note (mündl.)</th>
                <th>Note (schriftl.)</th>
                <th>Gesamt</th>
              </tr>
            </thead>
            <tbody>
              <% @seminar.seminarergebnisse.each do |ergebnis| %>
                <tr>
                  <td><%= link_to ergebnis.student.full_name, student_path(ergebnis.student) %></td>
                  <td><%= ergebnis.student.matrikelnummer %></td>
                  <td><%= ergebnis.muendlich_note || '-' %></td>
                  <td><%= ergebnis.schriftlich_note || '-' %></td>
                  <td><strong><%= ergebnis.gesamt || '-' %></strong></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <p class="text-muted">Für dieses Seminar sind noch keine Teilnehmer eingetragen.</p>
      <% end %>
    </div>
  </div>
</div>