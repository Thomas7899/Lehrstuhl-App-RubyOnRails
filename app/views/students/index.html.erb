<p style="color: green"><%= notice %></p>

<% content_for :title, "Students" %>

<h1>Students</h1>

<h1>Search for a student</h1>
<%= form_with url: search_students_path, method: :post do |form| %>
  <%= form.search_field :vorname_search, oninput: "this.form.requestSubmit()", style: "width: 20%;" %>
<% end %>

<div id="search_results">
</div>
<%= link_to "New Student", new_student_path, class: "btn btn-success" %>
<div id="students" class="container mt-4">
  <div class="row">
    <% @students.each do |student| %>
      <div class="col-md-6 col-lg-4 mb-4">
        <div class="card">
          <div class="card-body">
            <%= render student %>
            <p class="mt-3">
              <%= link_to "Show", student, class: "btn btn-primary btn-sm" %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="pagination">
  <%= will_paginate %>
</div>
</div>


