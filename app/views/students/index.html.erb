<p style="color: green"><%= notice %></p>

<% content_for :title, "Students" %>

<h1>Students</h1>

<div id="students" class="container mt-4">
  <div class="row">
    <% @students.each do |student| %>
      <div class="col-md-6 col-lg-4 mb-4">
        <div class="card">
          <div class="card-body">
            <%= render student %>
            <p class="mt-3">
              <%= link_to "Show this student", student, class: "btn btn-primary btn-sm" %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


<%= link_to "New student", new_student_path, class: "btn btn-success" %>

