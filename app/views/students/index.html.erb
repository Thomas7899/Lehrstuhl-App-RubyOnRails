<p style="color: green">
  <%= notice %>
</p>

<% content_for :title, "Studierende" %>

  <div id="search_results" class="text-center">

  </div>

  <h1 class="text-center mb-4">Studierende</h1>

  <div class="text-center">
    <%= link_to "Studentin/Student erstellen" , new_student_path, class: "btn btn-success" %>
  </div>


  <div id="studentsCarousel" class="carousel slide mt-4" data-bs-ride="carousel"
  style="max-width: 800px; margin: auto; border-radius: 12px; 
  overflow: hidden; background: #fff; box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);">

  <div class="carousel-indicators">
    <% @students.each_with_index do |_, index| %>
      <button type="button" data-bs-target="#studentsCarousel" data-bs-slide-to="<%= index %>"
        class="<%= 'active' if index.zero? %>" aria-current="<%= index.zero? %>" aria-label="Slide <%= index + 1 %>"
        style="width: 10px; height: 10px; border-radius: 50%; 
        background-color: #666; border: none; margin: 0 5px;"></button>
    <% end %>
  </div>

  <div class="carousel-inner text-center">
    <% @students.each_with_index do |student, index| %>
      <div class="carousel-item <%= 'active' if index.zero? %>" style="padding: 30px;">
        <div class="card mx-auto"
          style="max-width: 20rem; border: none; 
          border-radius: 12px; box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1); background: #f8f9fa;">
          
          <div class="card-body" style="padding: 25px;">
            <%= render student %>
            <p class="mt-3">
              <%= link_to "Show", student, class: "btn btn-primary btn-sm",
                style: "background: linear-gradient(135deg, #007bff, #0056b3); 
                border: none; padding: 6px 12px; font-size: 14px; border-radius: 6px;" %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <button class="carousel-control-prev" type="button" data-bs-target="#studentsCarousel" data-bs-slide="prev"
    style="position: absolute; top: 50%; transform: translateY(-50%); left: 10px; 
    background-color: rgba(0, 0, 0, 0.2); border: none; width: 40px; height: 40px; border-radius: 50%;">
    <span class="carousel-control-prev-icon" aria-hidden="true"
      style="background-color: white; border-radius: 50%; padding: 10px;"></span>
    <span class="">Previous</span>
  </button>

  <button class="carousel-control-next" type="button" data-bs-target="#studentsCarousel" data-bs-slide="next"
    style="position: absolute; top: 50%; transform: translateY(-50%); right: 10px; 
    background-color: rgba(0, 0, 0, 0.2); border: none; width: 40px; height: 40px; border-radius: 50%;">
    <span class="carousel-control-next-icon" aria-hidden="true"
      style="background-color: white; border-radius: 50%; padding: 10px;"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>


<div id="students" class="container mt-5">
  <div class="row">
    <% @students.each do |student| %>
      <div class="col-md-6 col-lg-4 mb-4">
        <div class="card shadow-sm border-0 rounded-lg"
          style="background: #f8f9fa; border-radius: 12px; box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1); 
          transition: transform 0.2s ease-in-out;">
          
          <div class="card-body text-center p-4">
            <%= render student %>
            <p class="mt-3">
              <%= link_to "Show", student, class: "btn btn-primary btn-sm",
                style: "background: linear-gradient(135deg, #007bff, #0056b3); 
                border: none; padding: 6px 12px; font-size: 14px; border-radius: 6px; 
                color: white; cursor: pointer;" %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="d-flex justify-content-center">
    <div class="digg_pagination">
      <%= will_paginate @students, container: false, class: "pagination" %>
    </div>
  </div>
</div>
