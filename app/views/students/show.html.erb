<p style="color: green"><%= notice %></p>

<div class="card mb-4">
  <div class="card-body">
    <%= render @student %>
  </div>
</div>


<div class="d-flex flex-column flex-md-row align-items-start gap-2 mt-3">
  <%= link_to "Edit this student", edit_student_path(@student), class: "btn btn-warning" %>
  <%= link_to "Back to students", students_path, class: "btn btn-secondary" %>
  <%= button_to "Destroy this student", @student, method: :delete, class: "btn btn-danger" %>
</div>
