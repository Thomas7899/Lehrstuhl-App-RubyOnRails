<!-- Studierende Grid -->
<div class="row g-3 mb-4">
  <% if students.any? %>
    <% students.each do |student| %>
      <div class="col-xl-4 col-lg-6">
        <div class="card h-100 shadow-sm hover-card">
          <div class="card-header bg-transparent border-bottom-0 d-flex align-items-center justify-content-between">
            <div class="d-flex align-items-center">
              <div class="avatar-circle bg-primary text-white me-3">
                <%= student.vorname&.first&.upcase || 'S' %><%= student.nachname&.first&.upcase || 'T' %>
              </div>
              <div>
                <h6 class="card-title mb-0"><%= student.vorname %> <%= student.nachname %></h6>
                <small class="text-muted">ID: <%= student.id %></small>
              </div>
            </div>
            <div class="dropdown">
              <button class="btn btn-link text-muted p-0" type="button" data-bs-toggle="dropdown">
                <i class="bi bi-three-dots-vertical"></i>
              </button>
              <ul class="dropdown-menu dropdown-menu-end">
                <li>
                  <%= link_to student_path(student), class: "dropdown-item" do %>
                    <i class="bi bi-eye me-2"></i>Details anzeigen
                  <% end %>
                </li>
                <li>
                  <%= link_to edit_student_path(student), class: "dropdown-item" do %>
                    <i class="bi bi-pencil me-2"></i>Bearbeiten
                  <% end %>
                </li>
                <li><hr class="dropdown-divider"></li>
                <li>
                  <%= link_to student, 
                      data: { 
                        turbo_method: :delete, 
                        turbo_confirm: "Student '#{student.vorname} #{student.nachname}' wirklich löschen?" 
                      }, 
                      class: "dropdown-item text-danger" do %>
                    <i class="bi bi-trash me-2"></i>Löschen
                  <% end %>
                </li>
              </ul>
            </div>
          </div>
          
          <div class="card-body pt-2">
            <div class="row g-2 text-sm">
              <div class="col-12">
                <div class="d-flex align-items-center text-muted">
                  <i class="bi bi-envelope me-2 text-primary"></i>
                  <span class="text-truncate"><%= student.email %></span>
                </div>
              </div>
              <div class="col-12">
                <div class="d-flex align-items-center text-muted">
                  <i class="bi bi-card-text me-2 text-info"></i>
                  <span>Matrikel: <strong><%= student.matrikelnummer %></strong></span>
                </div>
              </div>
              <% if student.geburtsdatum %>
                <div class="col-12">
                  <div class="d-flex align-items-center text-muted">
                    <i class="bi bi-calendar me-2 text-success"></i>
                    <span>Geboren: <%= student.geburtsdatum.strftime('%d.%m.%Y') %></span>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
          
          <div class="card-footer bg-transparent border-top-0">
            <div class="d-flex gap-2">
              <%= link_to student_path(student), class: "btn btn-outline-primary btn-sm flex-fill" do %>
                <i class="bi bi-eye me-1"></i>Details
              <% end %>
              <%= link_to edit_student_path(student), class: "btn btn-outline-secondary btn-sm flex-fill" do %>
                <i class="bi bi-pencil me-1"></i>Bearbeiten
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="col-12">
      <div class="text-center py-5">
        <div class="mb-3">
          <i class="bi bi-people display-1 text-muted opacity-50"></i>
        </div>
        <h5 class="text-muted">Keine Studierenden gefunden</h5>
        <p class="text-muted mb-3">Es sind noch keine Studierenden registriert oder Ihre Suche ergab keine Treffer.</p>
        <%= link_to new_student_path, class: "btn btn-primary" do %>
          <i class="bi bi-plus-circle me-1"></i>Ersten Student hinzufügen
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<!-- Pagination -->
<% if students.total_pages > 1 %>
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center">
        <div class="text-muted small">
          Seite <%= students.current_page %> von <%= students.total_pages %> 
          (<%= students.total_entries %> Studierende gesamt)
        </div>
        <div>
          <%= will_paginate students, class: "digg_pagination" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
