<% content_for :title, "Editing Student" %>

<div class="container mt-4">
  <h1 class="mb-4">Editing Student</h1>

  <div class="card shadow-sm">
    <div class="card-body">
      <%= render "form", student: @student %>
    </div>
  </div>

  <br>

  <div class="d-flex justify-content-between">
    <%= link_to "Show this Student", @student, class: "btn btn-primary" %>
    <%= link_to "Back to Students", students_path, class: "btn btn-secondary" %>
  </div>
</div>
