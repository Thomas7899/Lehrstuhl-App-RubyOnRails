<% content_for :title, "Konkrete Abschlussarbeiten" %>

<div id="search_results" class="text-center">
    
</div>

  <h1 class="text-center mb-4">Konkrete Abschlussarbeiten</h1>

  <div class="text-center">
    <%= link_to "Abschlussarbeit erstellen" , new_konkrete_abschlussarbeit_path, class: "btn btn-success" %>
  </div>

  <div id="konkrete_abschlussarbeits" class="container mt-4">
    <div class="row">
      <% @konkrete_abschlussarbeits.each do |konkrete_abschlussarbeit| %>
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card">
            <div class="card-body">
              <%= render konkrete_abschlussarbeit %>
                <p class="mt-3">
                  <%= link_to "Show" , konkrete_abschlussarbeit, class: "btn btn-primary btn-sm" %>
                </p>
            </div>
          </div>
        </div>
        <% end %>
    </div>

    <div class="text-center fw-bold alert alert-info my-4">
        <%= page_entries_info @konkrete_abschlussarbeits %>
        <%= will_paginate @konkrete_abschlussarbeits %>
    </div>